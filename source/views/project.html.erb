<div id="projects" class="container title">
  <h1>Projects</h1>
</div>
<%# project container %>
<div class="container slider-container mt-5">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="project-card-main">
          <div class="container-fluid card-left">
            <h1>Take a look!</h1>
          </div>
          <div class="all-projects">
            <% data.products.each do |product| %>
              <div class="project-main">
                <% link_to product.url, target: "_blank" do %>
                  <%= image_tag product.image, target: "_blank" %>
                <% end %>
                <h3><%= product.name %></h3>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <%# Here is the iteration on my projects %>
      <% data.products.each do |product| %>
        <div class="carousel-item">
          <div class="project-card">
            <div class="container-fluid card-left">
              <h1><%= product.name %></h1>
              <div class="card-image">
                <% link_to product.url, target: "_blank" do %>
                  <%= image_tag product.image %>
                <% end %>
              </div>
            </div>
            <div class="container-fluid card-right">
              <div class="container">
                <p><%= product.description %></p>
              </div>
              <div class="container icon-container">
                <% product.icons.each do |icon|%>
                  <%= image_tag icon, class:"card-icon" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
