<div class="container d-flex">
  <div class="contact w-100 mr-3">
    <h1 class="container title">Contact me!</h1>
    <form action="">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="email">
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="name">
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" id="message" cols="12" rows="8" class="form-control"></textarea>
      </div>
    </form>
  </div>
  <div class="skills w-100">
    <h1 class="container title">My Skills</h1>
  </div>
</div>
